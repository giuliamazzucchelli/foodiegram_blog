<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @user%>
            <%= form_with(model: @user,class:"shadow p-3 mb-3 rounded", local: true) do |f|%>

                <div class="form-group row" >
                    <%= image_tag(@user.avatar_thumbnail) if @user.avatar.attached?%>
                </div>

                <div class="form-group row"  >
                   <%= f.label :avatar, class:"col-2 col-form-label text-dark" %>
                    <%= f.file_field :avatar,class:"col-2 col-form-label text-dark",name:"Browse" %>
                </div>

                <div class="form-group row">
                    <%= f.label :username, class:"col-2 col-form-label text-dark" %>
                    <div class="col-10">
                        <%= f.text_field :username, class:"form-control shadow rounded",placeholder:"Enter a username" %>
                    </div>    
                </div>

                <div class="form-group row">
                    <%= f.label :bio, class:"col-2 col-form-label text-dark" %>
                    <div class="col-10">
                        <%= f.text_area :bio, class:"form-control shadow rounded",placeholder:"Enter a bio" %>
                    </div>    
                </div>
 
                <div class="form-group row justify-content-center text-dark">
                    <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class:"btn btn-outline-dark btn-lg" )%>
                </p>

            <% end %>
        </div>
        <div class="mb-3">
        </div> 
    </div>
</div>


 