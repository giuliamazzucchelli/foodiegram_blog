  
<h1 class="text-center mt-4">
  <% if params[:search] && @recipes.count!= 0%>
    <%= pluralize(@recipes.count,'recipe')%> found for <%=@search_term.downcase%>
  <%elsif params[:search] && @recipes.count== 0%>
    No recipes found for <%=@search_term.downcase%>
  <%else%>
    Recipes
  <%end%>
</h1>
  <%= paginate @recipes %>
    <%= render 'recipe' %>
  <%= paginate @recipes%>

<% if user_signed_in?%>
<%= link_to 'board',board_recipe_url(current_user),class:"text-dark"%>
<%end%>
