<div class="container mt-5">
  <div class="row justify-content-center ">
  <h2> Log in </h2>
      <div class="col-6 mt-5 shadow rounded justify-content-center ">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name),class: "shadow mb-5 rounded") do |f| %>
        <div class="form-group row justify-content-center" >
          <%= f.label :email,class:"col-3 col-form-label text-dark mt-4"  %>
          <div class="col-4">
          <%= f.email_field :email,class:"form-control shadow rounded mt-4", autofocus: true, autocomplete: "email" %>
          </div>
        </div>


        <div class="form-group row justify-content-center " >
          <%= f.label :password,class:"col-3 col-form-label text-dark mt-2" %>
          <div class="col-4">
            <%= f.password_field :password,class:"form-control shadow rounded mt-2", autocomplete: "current-password" %>
          </div>
        </div>


        <div class="form-group row justify-content-center text-dark ">
          <%= f.submit "Log in",class:"btn btn-outline-info mt-3" %>
        </div>
        <% end %>

      </div> 
    </div>
  </div>
</div>


