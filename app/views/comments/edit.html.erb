 <%= form_with(model: @comment,class:"shadow p-3 mb-3 rounded", local: true) do |f|%>

    <div class="form-group row">
    <%= f.label :body, class:"col-2 col-form-label text-dark" %>
    <div class="col-10">
        <%= f.text_area :body, class:"form-control shadow rounded", minlength:3,maxlength:150  %>
    </div>   
    <div class="form-group row justify-content-center">
    <%= f.submit class:"btn btn-outline-dark btn-small" %>

    </div>
<%end%>