<h3 class="text-center mt-4"> Edit your comment </h3>

<div class="container mt-10">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with(model: @comment,class:"shadow p-3 mb-3 rounded", local: true) do |f|%>
                <div class="form-group">
                <%= f.text_area :body, class:"form-control shadow rounded", minlength:3,maxlength:150  %>
                </div>
                <div class="form-group row justify-content-center">
                <%= f.submit class:"btn btn-outline-info btn-sm mt-3" %>
                </div>
            <%end%>
        </div>
    </div>
</div>